{% extends "./base.html.twig" %}

{% block body %}
	<div class="w-4/5 m-auto my-20">
		{{ form_start(form) }}

		<div class="form-control">
			<div class="mb-4 font-extrabold">{{ form_label(form.content, 'Зарын агуулга') }}</div>

			<div class="mb-4">
				{{ form_widget(form.content) }}
			</div>

			<div class="form-error">
				{{ form_errors(form.content) }}
			</div>
		</div>

		<button type="submit" class="uppercase mt-15 bg-blue-500 text-gray-100 text-lg font-extrabold py-2 px-4 rounded-3xl">
			Хадгалах
		</button>

		{{ form_end(form) }}
	</div>
{% endblock %}
